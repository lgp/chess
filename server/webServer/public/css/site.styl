/*
	LGP Chess
	Site stylesheet
	Lunch Group Posse, 2013
*/

/* Mixins */
border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background-color #eee
	background-image url("../img/site/back.png")

#logo
	margin 0 auto
	text-align center

#container
	width 800px
	background white
	border-radius 4px
	border 4px black double
	margin 0 auto

#signIn
	position absolute;
	top 5px;
	right 5px;

.btn
	background #eee
	border-radius 2px
	padding 10px
	border 1px solid black
	text-decoration none
	color black
	margin:2px;

.padded
	padding 15px

.scrollLink
	position fixed
	top 5px
	left 5px
	display none
	text-decoration none
	color gray
	z-index 1
	
#gameWrapper
	margin 0 auto
	vertical-align middle
	
#game
	margin 0 auto
	position relative
	display inline-block
	vertical-align middle

#turn
	text-align center
	
.timerWrapper
	text-align center
	font-size 20px
	
.timer
	font-size 14px

.turnMainHeading
	font-size 30px
	text-transform uppercase
	
.toolbarContent
	vertical-align middle
	
.toolbar
	width 150px
	display inline-block
	vertical-align middle

/* OpenID login widget */
#openid_form
	margin 0 auto
	
/* SimpleModal styling */
#simplemodal-overlay
	background-color #000
#simplemodal-container
	background-color #FFF7C2
	border 8px solid rgb(255, 153, 0)
	border-radius 20px
	padding 12px
	color black