/* Mixins */
border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background-color #eee
	background-image url("../img/site/back.png")

#logo
	margin 0 auto
	text-align center

#container
	width 800px
	background white
	border-radius 4px
	border 4px black double
	margin 0 auto

#signIn
	position absolute;
	top 5px;
	right 5px;

.btn
	background #eee
	border-radius 2px
	padding 10px
	border 1px solid black
	text-decoration none
	color black
	margin:2px;

.padded
	padding 15px

/* OpenID login widget */
#openid_form
	margin 0 auto