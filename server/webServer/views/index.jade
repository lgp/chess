extends layout

block content
	a#scrollDown.scrollLink(href='#game') &darr; Scroll to game board
	a#scrollUp.scrollLink(href='#game') &uarr; Scroll to game board
	#gameWrapper
		#leftToolbar.toolbar
			#turn.toolbarContent
			hr
			hr
			.timerWrapper.toolbarContent Total
				#totalTimer.timer
			hr
			.timerWrapper.toolbarContent White
				#whiteTimer.timer
			hr
			.timerWrapper.toolbarContent Black
				#blackTimer.timer
		#game
		#rightToolbar.toolbar
	#upgradeModal(style='display:none')
		button(onclick='upgrade("q")') Queen
		button(onclick='upgrade("r")') Rook
		button(onclick='upgrade("b")') Bishop
		button(onclick='upgrade("h")') Knight

block scripts
	script(src='js/game.js')
	script(src='lib/kinetic-v4.5.1.min.js')
	script(src='http://localhost:8080/socket.io/socket.io.js')
	script(src='lib/jquery.simplemodal.1.4.4.min.js')